---
interface Props {
  measurementId: string
}

const { measurementId } = Astro.props
---

<script
  is:inline
  src={`https://www.googletagmanager.com/gtag/js?id=${measurementId}`}></script>

<script is:inline>
  window.dataLayer = window.dataLayer || []
  function gtag() {
    dataLayer.push(arguments)
  }
  gtag("js", new Date())
  gtag("config", measurementId)
</script>
