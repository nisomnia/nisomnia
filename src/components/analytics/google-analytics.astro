---
interface Props {
  measurementId: string
}

const { measurementId } = Astro.props
---

<script
  is:inline
  async
  defer
  src={`https://www.googletagmanager.com/gtag/js?id=${measurementId || "G-1234567890"}`}
></script>

<script is:inline>
  window.dataLayer = window.dataLayer || []
  function gtag() {
    dataLayer.push(arguments)
  }
  gtag("js", new Date())
  gtag("config", measurementId || "G-1234567890")
</script>
