---
import { Schema } from "astro-seo-schema"

import { publicSiteTitle, publicSiteUrl } from "@/utils/constant"

interface Props {
  listItems?: {
    name: string
    url: string
  }[]
}

const { listItems } = Astro.props

const listItem = listItems?.map((item, index) => ({
  "@type": "ListItem",
  position: index + 2,
  item: {
    "@id": `${publicSiteUrl}${item.url}`,
    name: item.name,
  },
}))
---

<Schema
  item={{
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    itemListElement: [
      {
        "@type": "ListItem",
        position: 1,
        item: { "@id": publicSiteUrl, name: publicSiteTitle },
        ...(listItems && listItem),
      },
    ],
  }}
/>
