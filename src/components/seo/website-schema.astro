---
import { Schema } from "astro-seo-schema"

import { publicSiteUrl } from "@/utils/constant"
---

<Schema
  item={{
    "@context": "https://schema.org",
    "@type": "WebSite",
    url: publicSiteUrl,
    potentialAction: [
      {
        "@type": "SearchAction",
        target: `${publicSiteUrl}/search?query={search_term_string}`,
        "query-input": "required name=search_term_string",
      },
    ],
  }}
/>
