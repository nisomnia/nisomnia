---
import type { HTMLAttributes } from "astro/types"
import { cn } from "@yopem-ui/utils"

type Props = HTMLAttributes<"div">

const { class: className, ...attrs } = Astro.props
---

<div
  className={cn(
    "bg-card text-card-foreground rounded-xl border shadow",
    className,
  )}
  {...attrs}
>
  <slot />
</div>
